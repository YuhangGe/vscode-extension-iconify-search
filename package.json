{
  "name": "iconify-search",
  "displayName": "Iconify Search",
  "description": "Search and Insert Iconify Icons in VS Code",
  "version": "0.0.1",
  "publisher": "abeyuhang",
  "private": true,
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YuhangGe/vscode-extension-iconify-search"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:iconify.search"
  ],
  "main": "./out/extension.cjs",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "iconfiySearch.iconsView",
          "name": "Iconify Icons"
        }
      ]
    },
    "commands": [
      {
        "command": "iconify.search",
        "title": "Search & Insert",
        "category": "Iconify"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "rm -rf out && pnpm build:webview:iconify",
    "build:extension": "vite build -c scripts/vite.extension.config.ts",
    "watch:extension": "vite build -c scripts/vite.extension.config.ts -- --watch",
    "build:webview:iconify": "vite build -c scripts/vite.webview.config.ts -- iconify",
    "watch:webview:iconify": "vite build -c scripts/vite.webview.config.ts -- iconify --watch",
    "lint": "eslint './{src,scripts}/**/*.{ts,tsx}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.89.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
